<h1 class="text-center header">Add a New Product</h1>

<%if(errorMessage){%>
<div class="alert alert-danger" role="alert">
    <%=errorMessage%>
  </div>
<%}%>

        <form action="/" method="post" enctype="multipart/form-data" class="mt-4 p-4 shadow-sm rounded bg-light">
            <!-- Product Name -->
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName" name="name" placeholder="Enter product name">
            </div>

            <!-- Product Description -->
            <div class="mb-3">
                <label for="productDescription" class="form-label">Product Description</label>
                <textarea class="form-control" id="productDescription" rows="4" name="desc" placeholder="Enter product description"></textarea>
            </div>

            <!-- Price -->
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Enter product price">
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="imageUrl" class="form-label">Image URL</label>
                <!-- <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Enter image URL"> -->
                 <input type="file" id="imageUrl" name="imageUrl" accept="images/*">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Add Product</button>
        </form>